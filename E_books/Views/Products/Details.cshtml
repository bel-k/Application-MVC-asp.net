@model Product

@{
    ViewData["Title"] = "Book details";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.Title
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.ImageUrl" width="100%" alt="@Model.Title">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">@Model.Description</p>
                        <p class="card-text">
                            <b>Category: </b>
                            <a asp-controller="Categories" asp-action="Details" asp-route-id="@Model.CategoryId">
                                @Model.Category.Title
                            </a>
                        </p>
                        <p class="card-text">
                            <b>Supplier: </b>
                            <a asp-controller="Suppliers" asp-action="Details" asp-route-id="@Model.SupplierId">
                                @Model.Supplier.Name
                            </a>
                        </p
                        <p class="card-text"><b>Start Date: </b>@Model.createdAt.ToString("dd MMM yy")</p>
                        @* <p class="card-text ">
                            <b>Status: </b>
                            @if (DateTime.Now >= Model.StartDate && DateTime.Now <= Model.EndDate)
                            {
                                <span class="badge bg-success text-white">AVAILABLE</span>
                            }
                            else if (DateTime.Now > Model.EndDate)
                            {
                                <span class="badge bg-danger text-white">EXPIRED</span>
                            }
                            else
                            {
                                <span class="badge bg-primary text-white">UPCOMING</span>
                            }
                        </p> *@
                        

                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-action="Index">
                                Back to List
                            </a>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            { 
                                <a class="btn btn-success text-white"
                                asp-controller="Products"
                                asp-action="Edit"
                                asp-route-id="@Model.Id">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                            }
                            else
                            {
                            <a class="btn btn-success text-white"
                                asp-controller="Orders"
                                asp-action="AddItemToShoppingCart"
                                asp-route-id="@Model.Id">
                                <i class="bi bi-cart-plus"></i> Add to Cart (Price @Model.Price.ToString("c"))
                            </a>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>